<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true"
        android:color="?attr/android:colorEdgeEffect"></item> <!-- selected颜色 -->
    <item android:state_pressed="true"
        android:color="?attr/android:colorEdgeEffect"/> <!-- pressed颜色 -->
    <item android:state_focused="true"
        android:color="?attr/android:colorEdgeEffect"/> <!-- focused颜色 -->
    <item android:color="#000000"/> <!-- default颜色 -->

</selector> 
