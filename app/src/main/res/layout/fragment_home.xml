<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">

	<android.support.design.widget.AppBarLayout
		android:id="@+id/fragment_home_appBarLayout"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="?attr/colorPrimary"
		android:theme="@style/AppTheme.AppBarOverlay"
		android:elevation="4dp">

		<android.support.v7.widget.Toolbar
			android:id="@+id/fragment_home_toolbar"
			android:layout_width="match_parent"
			android:layout_height="?attr/actionBarSize"
			android:background="#00FFFFFF"
			app:popupTheme="@style/AppTheme.PopupOverlay"
			android:theme="@style/AppTheme.AppBarOverlay"/>

		<android.support.design.widget.TabLayout
			android:id="@+id/fragment_home_tabLayout"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:background="#00ffffff"
			app:tabMode="fixed"
			app:tabGravity="fill"
			app:tabIndicatorColor="#FFFFFF"
			app:tabTextColor="#FFFFFF"
			app:tabSelectedTextColor="#FFFFFF"/>

	</android.support.design.widget.AppBarLayout>

	<View
		android:layout_height="4dp"
		android:layout_width="match_parent"
		android:background="@drawable/app_bar_elevation"/>

	<RelativeLayout
		android:layout_height="match_parent"
		android:layout_width="match_parent"
		android:gravity="bottom">

		<com.sunrt233.lightmusic.widget.MyViewPager
			android:id="@+id/fragment_home_myViewPager"
			android:layout_height="match_parent"
			android:layout_width="match_parent"
			android:layout_marginBottom="56dp"/>

		<com.sunrt233.lightmusic.widget.MusicToolBarView
			android:id="@+id/fragment_home_musicbar"
			android:layout_alignParentBottom="true"
			android:layout_height="wrap_content"
			android:layout_width="match_parent"/>

		<View
			android:layout_height="4dp"
			android:layout_width="match_parent"
			android:layout_above="@id/fragment_home_musicbar"
			android:background="@drawable/elevation"/>

	</RelativeLayout>

</LinearLayout>

