<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">

	<android.support.design.widget.AppBarLayout
		android:id="@+id/fragment_home_appBarLayout"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="?attr/colorPrimary"
		android:theme="@style/AppTheme.AppBarOverlay"
		android:elevation="4dp">

		<android.support.v7.widget.Toolbar
			android:id="@+id/fragment_home_toolbar"
			android:layout_width="match_parent"
			android:layout_height="?attr/actionBarSize"
			android:background="#00FFFFFF"
			app:popupTheme="@style/AppTheme.PopupOverlay"
			android:theme="@style/AppTheme.AppBarOverlay"/>

		<android.support.design.widget.TabLayout
			android:id="@+id/fragment_home_tabLayout"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:background="#00ffffff"
			app:tabMode="fixed"
			app:tabGravity="fill"
			app:tabIndicatorColor="#FFFFFF"
			app:tabTextColor="#FFFFFF"
			app:tabSelectedTextColor="#FFFFFF"/>

	</android.support.design.widget.AppBarLayout>
	
	<View
		android:layout_height="4dp"
		android:layout_width="match_parent"
		android:background="@drawable/app_bar_elevation"/>

	<RelativeLayout
		android:layout_height="match_parent"
		android:layout_width="match_parent"
		android:gravity="bottom">

		<com.sunrt233.lightmusic.widget.MyViewPager
			android:id="@+id/fragment_home_myViewPager"
			android:layout_height="match_parent"
			android:layout_width="match_parent"
			android:layout_marginBottom="56dp"/>
		
		<FrameLayout
			android:background="?attr/colorPrimary"
			android:layout_height="56dp"
			android:layout_width="match_parent"
			android:paddingLeft="6dp"
			android:paddingRight="6dp"
			android:id="@+id/fragment_home_musicbar"
			android:clickable="true"
			android:layout_alignParentBottom="true">

			<android.support.v7.widget.AppCompatImageView
				android:id="@+id/fragment_musicArtWorkImage"
				android:layout_width="46dp"
				android:layout_height="46dp"
				app:srcCompat="@drawable/ic_pause_circle_filled"
				android:scaleType="fitXY"
				android:layout_gravity="left|center"/>

			<LinearLayout
				android:layout_height="match_parent"
				android:layout_width="wrap_content"
				android:orientation="vertical"
				android:layout_marginLeft="58dp"
				android:gravity="left|center">

				<TextView
					android:id="@+id/fragment_musicName"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textAppearance="?android:attr/textAppearanceMedium"
					android:text="轻-音乐"
					android:textColor="#FFFFFF"
					android:lines="1"
					android:ellipsize="end"
					android:ems="8"/>

				<TextView
					android:id="@+id/fragment_musicAuthor"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textAppearance="?android:attr/textAppearanceSmall"
					android:textColor="#FFFFFF"
					android:ems="10"
					android:ellipsize="end"
					android:lines="1"
					android:text=""/>

			</LinearLayout>

			<LinearLayout
				android:layout_height="58dp"
				android:layout_width="wrap_content"
				android:layout_gravity="right|center"
				android:gravity="center">

				<android.support.v7.widget.AppCompatImageView
					android:layout_width="36dp"
					android:layout_height="36dp"
					android:background="?attr/selectableItemBackgroundBorderless"
					android:clickable="true"
					app:srcCompat="@drawable/ic_skip_previous_white"/>

				<android.support.v7.widget.AppCompatImageView
					android:id="@+id/fragment_musicPlay"
					android:layout_width="36dp"
					android:layout_height="36dp"
					android:background="?attr/selectableItemBackgroundBorderless"
					android:clickable="true"
					app:srcCompat="@drawable/ic_play_arrow"
					android:layout_margin="6dp"/>

				<android.support.v7.widget.AppCompatImageView
					android:layout_width="36dp"
					android:layout_height="36dp"
					android:background="?attr/selectableItemBackgroundBorderless"
					android:clickable="true"
					app:srcCompat="@drawable/ic_skip_next_white"/>

			</LinearLayout>

		</FrameLayout>

		<View
			android:layout_height="4dp"
			android:layout_width="match_parent"
			android:layout_above="@id/fragment_home_musicbar"
			android:background="@drawable/elevation"/>

	</RelativeLayout>

</LinearLayout>

