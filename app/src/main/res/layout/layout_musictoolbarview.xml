<FrameLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:background="?attr/colorPrimary"
	android:layout_height="56dp"
	android:layout_width="match_parent">
	
	<FrameLayout
		android:id="@+id/layout_musictoolbarview_rootLayout"
		android:layout_height="match_parent"
		android:layout_width="match_parent"
		android:background="?attr/selectableItemBackgroundBorderless"
		android:clickable="true"
		android:paddingLeft="6dp"
		android:paddingRight="6dp">

	<android.support.v7.widget.AppCompatImageView
		android:id="@+id/layout_musictoolbarview_artWorkImage"
		android:layout_width="46dp"
		android:layout_height="46dp"
		app:srcCompat="@drawable/ic_pause_circle_filled"
		android:scaleType="fitXY"
		android:layout_gravity="left|center"/>

	<LinearLayout
		android:layout_height="match_parent"
		android:layout_width="wrap_content"
		android:orientation="vertical"
		android:layout_marginLeft="58dp"
		android:gravity="left|center">

		<TextView
			android:id="@+id/layout_musictoolbarview__musicName"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:text="轻-音乐"
			android:textColor="#FFFFFF"
			android:lines="1"
			android:ems="8"
			android:ellipsize="marquee"
			android:singleLine="true"
			android:marqueeRepeatLimit="marquee_forever"/>

		<TextView
			android:id="@+id/layout_musictoolbarview__musicAuthor"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceSmall"
			android:textColor="#FFFFFF"
			android:ems="10"
			android:ellipsize="end"
			android:lines="1"
			android:text=""/>

	</LinearLayout>

	<LinearLayout
		android:layout_height="58dp"
		android:layout_width="wrap_content"
		android:layout_gravity="right|center"
		android:gravity="center">

		<android.support.v7.widget.AppCompatImageView
			android:id="@+id/layout_musictoolbarview_previousMusicBtn"
			android:layout_width="36dp"
			android:layout_height="36dp"
			android:background="?attr/selectableItemBackgroundBorderless"
			android:clickable="true"
			app:srcCompat="@drawable/ic_skip_previous_white"/>

		<android.support.v7.widget.AppCompatImageView
			android:id="@+id/layout_musictoolbarview__musicPlayBtn"
			android:layout_width="36dp"
			android:layout_height="36dp"
			android:background="?attr/selectableItemBackgroundBorderless"
			android:clickable="true"
			app:srcCompat="@drawable/ic_play_arrow"
			android:layout_margin="6dp"/>

		<android.support.v7.widget.AppCompatImageView
			android:id="@+id/layout_musictoolbarview_nextMusicBtn"
			android:layout_width="36dp"
			android:layout_height="36dp"
			android:background="?attr/selectableItemBackgroundBorderless"
			android:clickable="true"
			app:srcCompat="@drawable/ic_skip_next_white"/>

	</LinearLayout>
	
	</FrameLayout>

</FrameLayout>
